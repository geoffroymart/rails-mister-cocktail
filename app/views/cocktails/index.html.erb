<div class="big-container">
  <h1>List of Cocktails</h1>
<!--   <div class= "content"> -->
  <div class="container">
<!--     <ul> -->
      <% @cocktails.each do |cocktail| %>
        <div class="row">
          <div class="col-xs-12 col-sm-4">
            <div class="card" style="background-image: linear-gradient(rgba(0,0,0,0.3), rgba(0,0,0,0.2)), url('<%=cl_image_path cocktail.photo %>');">
              <div class="card-description">
                <h2><%= link_to cocktail.name, "/cocktails/#{cocktail.id}" %></h2>
              </div>
              <a class="card-link" href="#" ></a>
            </div>
          </div>
        </div>
      <% end %>
<!--     </ul> -->
    <%= link_to "Add cocktail", new_cocktail_path, class: "btn btn-primary" %>
  </div>
<!--   </div> -->
</div>
